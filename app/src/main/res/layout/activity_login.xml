<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Login">

    <ImageView
        android:id="@+id/kva_login"
        android:layout_width="280dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/kva"
        android:translationY="210dp" />

    <EditText
        android:id="@+id/login_phone_input"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input"
        android:hint="Номер телефона"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="#9D99AC"
        android:textSize="12dp"
        android:translationY="280dp"

        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/login_password_input"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="#9D99AC"
        android:textSize="12dp"
        android:translationY="330dp"

        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/login_txt"
        android:layout_width="219dp"
        android:layout_height="29dp"
        android:layout_centerHorizontal="true"
        android:text="С возвращением!"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:translationY="140dp" />

    <TextView
        android:id="@+id/vxod"
        android:layout_width="55dp"
        android:layout_height="29dp"
        android:layout_centerHorizontal="true"
        android:text="Вход"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:translationY="220dp" />

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="110dp"
        android:layout_height="16dp"
        android:text="Забыли пароль?"
        android:textColor="#9D99AC"
        android:translationX="580px"
        android:translationY="370dp" />

    <ImageButton
        android:id="@+id/image_login_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:src="@drawable/btn_login"
        android:translationY="410dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />


</RelativeLayout>